<h3>Edite course {{title}}</h3>

<form action="/courses/edit" method="post">
    <div class="input-field">
          <input placeholder="Course name" name="title" id="title" type="text" class="validate" required value="{{course.title}}">
          <label for="title">Course name</label>
          <span class="helper-text" data-error="Please add course name"></span>

    </div>


    <div class="input-field">
          <input placeholder="Course price" name="price" id="pirce" type="text" class="validate" required value="{{course.price}}">
          <label for="price">Course price</label>
          <span class="helper-text" data-error="Please add course price"></span>
    </div>

 
     <div class="input-field">
          <input placeholder="Course price" id="img" name="img" type="text" class="validate" required value="{{course.img}}">
          <label for="img">Url course image</label>
          <span class="helper-text" data-error="Please add course img url"></span>
    </div>


    <input type="hidden" name="id" value="{{course.id}}">
    
    <button class="btn btn-primery">Save course</button>
</form>